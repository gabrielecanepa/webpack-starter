{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  },
  "globals": {
    "__dirname": true,
    "module": true,
    "process": true,
    "Promise": true
  },
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "max-lines": 2,
    "no-console": 1,
    "no-var": 2,
    "object-shorthand": [2, "always"],
    "prefer-const": [
      2,
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "never"],
    "sort-keys": 0,
    "sort-vars": [
      1,
      {
        "ignoreCase": false
      }
    ]
  }
}
